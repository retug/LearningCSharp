<Window x:Class="etabsRevitCnx.MainWindow"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:etabsRevitCnx"
             mc:Ignorable="d" 
             d:DesignHeight="1000" d:DesignWidth="1000">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <!-- Row 0 for buttons -->
            <RowDefinition Height="600" />
        </Grid.RowDefinitions>
        <Button x:Name="GatherBeamsButton" Content="Select Revit Beams" Margin="5" Click="GatherBeamsButton_Click" Height="40">
        </Button>
        <DataGrid Grid.Row="1" Name="revitBeamMapping" AutoGenerateColumns="False">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Revit Beam" Binding="{Binding Name}" />
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
    

</Window>
