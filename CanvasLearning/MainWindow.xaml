<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="MainWindow" Height="1000" Width="1000">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <ScrollViewer Name="scrollViewer" Grid.Row="0" HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto">
            <Border BorderBrush="Black" BorderThickness="4">
                <Canvas Name="canvas" Width="600" Height="600" MouseMove="Canvas_MouseMove">
                    <!-- Your lines and circles go here -->
                </Canvas>
            </Border>
        </ScrollViewer>

        <StackPanel Grid.Row="1" VerticalAlignment="Top" HorizontalAlignment="Left">
            <Button Content="Clear Selection" Margin="10" Click="ClearSelection_Click" />

            <!-- List of selected line names -->
            <ListBox Name="selectedLinesListBox" Width="200" Height="200" VerticalAlignment="Top" />
        </StackPanel>
    </Grid>
</Window>
